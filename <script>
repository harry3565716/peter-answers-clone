 <script>
        function showResponse() {
            var userAnswer = document.getElementById('userAnswer').value.toLowerCase();
            var response = document.getElementById('response');

            if (userAnswer == "") {
                response.innerHTML = "You didn't answer! Try again.";
            } else {
                response.innerHTML = "Oh no, Peter! I wasn't expecting that answer. But okay!";
            }
        }
    </script>
</body>
</html>
